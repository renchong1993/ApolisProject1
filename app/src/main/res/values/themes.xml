<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DbayProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="user_title">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="signup_box">
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>


    <style name="SplashView">
        <item name="android:text">@string/textview_italic_splash</item>
        <item name="android:textColor">@color/textview_main_spash</item>
        <item name="android:textSize">@dimen/regular_textsize_spash</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <string name="textview_italic_splash">DBay!</string>
    <dimen name="regular_textsize_spash">65sp</dimen>

    <style name="Theme.DbayProject.Fullscreen" parent="Theme.DbayProject">
        <item name="android:actionBarStyle">@style/Widget.Theme.DbayProject.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.DbayProject.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="warning">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/cardboard_200</item>

    </style>

    <style name="DBay_title">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:layout_marginTop">10dp</item>-->
    </style>
</resources>